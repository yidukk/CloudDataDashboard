@page
@model IndexModel
@{
    ViewData["Title"] = "Cloud + Data Dashboard";
}

<div class="container mt-4">
  <h1 class="mb-3">Cloud + Data Dashboard</h1>

  <form class="row g-3 mb-4">
    <div class="col-md-3">
      <label class="form-label">Metric</label>
      <select id="metricSelect" class="form-select">
        <option>Cost</option>
        <option>CPU</option>
        <option>Storage</option>
        <option>Network</option>
      </select>
    </div>
    <div class="col-md-3">
      <label class="form-label">Provider</label>
      <select id="providerSelect" class="form-select">
        <option>Azure</option>
        <option>AWS</option>
        <option>GCP</option>
      </select>
    </div>
    <div class="col-md-3 align-self-end">
      <button id="refreshBtn" type="button" class="btn btn-primary w-100">Refresh</button>
    </div>
  </form>

  <div class="row">
    <div class="col-lg-8 mb-4" style="height:360px">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title mb-3">Trend (Last 30 Days)</h5>
          <canvas id="trendChart"></canvas>
        </div>
      </div>
    </div>
    <div class="col-lg-4 mb-4" style="height:360px">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title mb-3">Provider Share (by Metric)</h5>
          <canvas id="summaryChart"></canvas>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="/js/dashboard.js"></script>
}
